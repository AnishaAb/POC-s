@model IEnumerable<Final.NHibernateModels.Customer>

@{
    ViewBag.Title = "FetchCustomerDetails";
}

<h2>Get Customers Using Table</h2>

<p>
    @Html.ActionLink("Create New", "CreateCustomer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCustomer", new { id=item.Id }) |
            @Html.ActionLink("Details", "GetCustomerById", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteCustomer", new { id=item.Id })
        </td>
    </tr>
}

</table>
